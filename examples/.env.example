# ============================================================================
# Backend API Configuration
# ============================================================================

# Your backend API URL
# Change this to your actual backend server URL
BACKEND_API_URL=http://localhost:8080/api

# If using a different port in development
# BACKEND_API_URL=http://192.168.1.100:8080/api

# For production
# BACKEND_API_URL=https://api.yourdomain.com/api

# ============================================================================
# Nguard Configuration
# ============================================================================

# Secret key for JWT signing (minimum 32 characters)
# Generate with: openssl rand -base64 32
NGUARD_SECRET=your-secure-secret-key-here-minimum-32-characters

# Cookie configuration
NGUARD_COOKIE_NAME=nguard-session
NGUARD_COOKIE_MAX_AGE=86400  # 24 hours in seconds

# ============================================================================
# Backend API Authentication
# ============================================================================

# If your backend requires API key or token for requests
BACKEND_API_KEY=your-api-key-here
BACKEND_API_TOKEN=your-api-token-here

# CORS configuration for your backend
BACKEND_CORS_ORIGIN=http://localhost:3000

# ============================================================================
# Application Configuration
# ============================================================================

# Node environment
NODE_ENV=development

# Next.js base URL
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# ============================================================================
# Logging Configuration
# ============================================================================

# Log level: debug, info, warn, error
LOG_LEVEL=info

# ============================================================================
# Security Configuration
# ============================================================================

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000      # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100      # Max requests per window

# Session settings
SESSION_TIMEOUT=1800              # 30 minutes in seconds
SESSION_REFRESH_THRESHOLD=600     # Refresh token 10 minutes before expiry
